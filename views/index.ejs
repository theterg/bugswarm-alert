<% layout('base') -%>
<h3 class=center>Edit an Alert:</h3>
<table id=alerts class="table table-bordered table-striped table-hover">
		<tr>
			<th>SMS</th>
			<th>Board ID</th>
			<th>Feed</th>
			<th>Threshold</th>
			<th>Actions</th>
		</tr>
		<tr>
			<td><input id=smsnum value="Enter Phone #"></input></td>
			<td><input id=resourceid value="Select an icon below"></input></td>
			<td><input id=feed value="Acceleration"></input></td>
			<td><input id=thresh value="1.0"></input></td>
			<td><button class=button onclick="createObj();">Add</button></td>
		</tr>
			<td colspan="5">
			<ul id="logos">
				<li><a href="#" onclick="selectRes('iphone');" class=resourceicon style="background-image: url(images/mini_full.png);"></a></li>
				<li><a href="#" onclick="selectRes('rtx');" class=resourceicon style="background-image: url(images/F150_full.png);"></a></li>
				<li><a href="#" onclick="selectRes('rl78g14');" class=resourceicon style="background-image: url(images/prius_full.png);"></a></li>
			</ul>
			</td>
		<tr>
			<td colspan="5">
			<ul id="logos">
				<li><div id="iphonechart"></div></li>
				<li><div id="rtxchart"></div></li>
				<li><div id="rl78g14chart"></div></li>
			</ul>
			</td>
		</tr>
</table>

<h3 class=center>List of alerts:</h3>
<table id=alerts class="table table-bordered table-striped table-hover">
		<tr>
			<th>SMS</th>
			<th>Board ID</th>
			<th>Feed</th>
			<th>Threshold</th>
			<th>Actions</th>
		</tr>
	<% for(var idx in alerts) {
		var alert = alerts[idx]; %>
		<tr id="<%=alert.id%>">
			<td>+1******<%=alert.smsnum.substring(8,12)%></td>
			<td><%=alert.board%></td>
			<td><%=alert.feed%></td>
			<td><%=alert.thresh%></td>
			<td><button class=button onclick="delItem(<%=alert.id%>);">Del</button>
				</td>
		</tr>
	<%}%>
</table>